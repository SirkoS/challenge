<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{variable.label}} - I-ADOPT Variable Details</title>
  <link href="../styles.css" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <header>
    <h1><a href="../index.html">I-ADOPT Variables</a></h1>
    <p>Your comprehensive resource for I-ADOPT variables and associated data.</p>
  </header>

  <main>
    <section>
      <h2>{{variable.label}}</h2>
      <p class="description">{{variable.comment}}</p>
    </section>

    <section>
      <h3>Property:</h3>
      <dl>
        <dt><a href="{{prop.url}}">{{prop.label}}</a></dt>
        <dd class="description">{{prop.comment}}</dd>
      </dl>
    </section>

    <section>
      <h3>Object of Interest:</h3>
      <dl>
        <dt><a href="{{ooi.url}}">{{ooi.label}}</a></dt>
        <dd class="description">{{ooi.comment}}</dd>
        {{#ooi.constraints.length}}
          <dt>Constraints</dt>
          <dd>
            <ul class="constraints-list">
              {{#ooi.constraints}}
                <li class="constraint-item">
                  <a href="{{url}}">{{label}}</a>
                  <p class="description">{{comment}}</p>
                </li>
              {{/ooi.constraints}}
            </ul>
          </dd>
        {{/ooi.constraints.length}}
      </dl>
    </section>

    {{#matrix}}
    <section>
      <h3>Matrix:</h3>
      <dl>
        <dt><a href="{{url}}">{{label}}</a></dt>
        <dd class="description">{{comment}}</dd>
        {{#matrix.constraints.length}}
          <dt>Constraints</dt>
          <dd>
            <ul class="constraints-list">
              {{#matrix.constraints}}
                <li class="constraint-item">
                  <a href="{{url}}">{{label}}</a>
                  <p class="description">{{comment}}</p>
                </li>
              {{/matrix.constraints}}
            </ul>
          </dd>
        {{/matrix.constraints.length}}
      </dl>
    </section>
    {{/matrix}}

    {{#context.length}}
    <section>
      <h3>Context Objects:</h3>
      <dl>
        {{#context}}
        <dt><a href="{{url}}">{{label}}</a></dt>
        <dd class="description">{{comment}}</dd>
        {{#constrained.length}}
          <dt>Constraints</dt>
          <dd>
            <ul class="constraints-list">
              {{#constrained}}
                <li class="constraint-item">
                  <a href="{{url}}">{{label}}</a>
                  <p class="description">{{comment}}</p>
                </li>
              {{/constrained}}
            </ul>
          </dd>
        {{/constrained.length}}
        {{/context}}
      </dl>
    </section>
    {{/context.length}}

    {{#constraints.length}}
    <section>
      <h3>Unassigned Constraints:</h3>
      <dl>
        {{#constraints}}
        <dt><a href="{{url}}">{{label}}</a></dt>
        <dd class="description">{{comment}}</dd>
        {{/constraints}}
      </dl>
    </section>
    {{/constraints.length}}
  </main>

  <footer>
    <p>&copy; 2024 I-ADOPT. All rights reserved.</p>
  </footer>
</body>
</html>
